<UserControl x:Class="ScheduleUI.YellowStripeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleUI"
             xmlns:vm="clr-namespace:ScheduleUI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.DataContext>
        <vm:YellowStripeViewModel />
    </UserControl.DataContext>

    <Canvas>
        <Polygon Fill="Yellow" Stroke="Black" StrokeThickness="1" Points="{Binding PolygonPoints}" />
    </Canvas>

</UserControl>
